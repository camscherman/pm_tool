<h1>Edit your details</h1>
<%= form_for @user do |f| %>
  <% if @user.errors.present? %>
    <%= @user.errors.full_messages.join(", ") %>
    <% end %>
  <div class='form-group'>
    <%= f.label :username %>
    <%= f.text_field :username %>
  </div>
  <div class='form-group'>
    <%= f.label :email %>
    <%= f.email_field :email%>
  </div>
  
  <%= f.submit %>

  <% end %>
